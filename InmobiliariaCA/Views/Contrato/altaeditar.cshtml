@model InmobiliariaCA.Models.ContratoModels.Contrato

@{
    ViewData["Title"] = Model == null || Model.Id == 0 ? "Crear Contrato" : "Editar Contrato";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form asp-action="CrearActualizar">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="Id_Inmueble" class="form-select" id="id_inmueble" disabled="@(Model?.Id_Inmueble != 0)" required>
                                <option value="">Seleccione un Inmueble</option>
                                @foreach (var inmueble in ViewBag.Inmuebles) {
                                    <option value="@inmueble.Value" data-precio="@ViewBag.InmueblesData[inmueble.Value]">@inmueble.Text</option>
                                }
                            </select>
                            <label for="id_inmueble"><i class="fas fa-building"></i> Inmueble</label>
                            <span asp-validation-for="Id_Inmueble" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            @Html.DropDownListFor(m => m.Id_Inquilino, (SelectList)ViewBag.Inquilinos, "Seleccione un Inquilino", new { @class = "form-select", @required = "required", id = 1 })
                            <label for="Id_Inquilino"><i class="fas fa-user"></i> Inquilino</label>
                            <span asp-validation-for="Id_Inquilino" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Fecha_Desde" class="form-label"><i class="fas fa-calendar-alt"></i> Fecha Desde</label>
                        <input asp-for="Fecha_Desde" type="date" class="form-control" />
                        <span asp-validation-for="Fecha_Desde" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Fecha_Hasta" class="form-label"><i class="fas fa-calendar-alt"></i> Fecha Hasta</label>
                        <input asp-for="Fecha_Hasta" type="date" class="form-control" />
                        <span asp-validation-for="Fecha_Hasta" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Monto_Alquiler" class="form-label">Monto del Alquiler</label>
                        <input asp-for="Monto_Alquiler" class="form-control" placeholder="Ingrese el monto del alquiler" type="text" />
                        <span asp-validation-for="Monto_Alquiler" class="text-danger"></span>
                    </div>
                </div>

                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("Index", "Contrato")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver a la Lista
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> @(Model == null || Model.Id == 0 ? "Registrar" : "Actualizar")
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            var today = new Date().toISOString().split('T')[0];
            $('#Fecha_Desde').attr('min', today);

            $('form').submit(function (event) {
                var fechaDesde = $('#Fecha_Desde').val();
                var fechaHasta = $('#Fecha_Hasta').val();
                var fechaActual = new Date().toISOString().split('T')[0];

                // Validación para la fecha desde no ser menor que la fecha actual
                if (fechaDesde < fechaActual) {
                    alert('La fecha de inicio no puede ser menor que la fecha actual.');
                    $('#Fecha_Desde').val(today);
                    event.preventDefault(); // Detiene el envío del formulario
                }

                // Validación para la fecha hasta ser posterior a la fecha desde
                if (fechaDesde && fechaHasta && fechaHasta < fechaDesde) {
                    alert('La fecha de finalización debe ser posterior a la fecha de inicio.');
                    $('#Fecha_Hasta').val('');
                    event.preventDefault(); // Detiene el envío del formulario
                }
            });

            $('#id_inmueble').change(function () {
                var precio = $(this).find('option:selected').attr('data-precio');
                precio = precio.replace(',', '.');
                $('#Monto_Alquiler').val(precio);
            });
        });
    </script>
}
