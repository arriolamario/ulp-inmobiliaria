@model IEnumerable<InmobiliariaCA.Models.Inquilino>

@{
    ViewData["Title"] = "Lista de Inquilinos";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="fas fa-users"></i> Lista de Inquilinos</h2>
        <a href="@Url.Action("AltaEditar", "Inquilino")" class="btn btn-success shadow-sm"><i class="fas fa-plus"></i> Agregar Nuevo Inquilino</a>
    </div>
    <div class="row">
        @if (Model.Any()) {
            @foreach (var inquilino in Model) {
                <div class="col-md-12 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title text-white p-2" style="background-color: #2d94f5;">
                                <i class="fas fa-user"></i> @inquilino.Nombre @inquilino.Apellido
                            </h5>
                            <p class="card-text"><strong><i class="fas fa-id-card"></i> DNI:</strong> @inquilino.Dni</p>
                            <p class="card-text"><strong><i class="fas fa-phone"></i> Teléfono:</strong> @inquilino.Telefono</p>
                            <p class="card-text"><strong><i class="fas fa-envelope"></i> Email:</strong> @inquilino.Email</p>
                            <p class="card-text"><strong><i class="fas fa-map-marker-alt"></i> Dirección:</strong> @inquilino.Direccion</p>
                            <div class="d-flex justify-content-end">
                                <a href="@Url.Action("Detalle", "Inquilino", new { id = inquilino.Id })" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Ver
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        } else {
            <div class="alert alert-info" role="alert">
                <i class="fas fa-info-circle"></i> No existen inquilinos registrados.
            </div>
        }
    </div>
</div>
