@model IEnumerable<InmobiliariaCA.Models.Inquilino>

@{
    ViewData["Title"] = "Lista de Inquilinos";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
          <h2 class="text-primary"><i class="fas fa-users"></i> Lista de Inquilinos</h2>
        <a href="@Url.Action("AltaEditar", "Inquilino")" class="btn btn-success shadow-sm">Agregar Nuevo Inquilino</a>
    </div>
    <div class="row">
        @if (Model.Any()) {
            @foreach (var inquilino in Model) {
                <div class="col-12 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title text-white p-2" style="background-color: #2d94f5;">@inquilino.Nombre @inquilino.Apellido</h5>
                            <p class="card-text"><strong>DNI:</strong> @inquilino.Dni</p>
                            <p class="card-text"><strong>Teléfono:</strong> @inquilino.Telefono</p>
                            <p class="card-text"><strong>Email:</strong> @inquilino.Email</p>
                            <p class="card-text"><strong>Dirección:</strong> @inquilino.Direccion</p>
                            <div class="d-flex justify-content-end">
                                <a href="@Url.Action("Detalle", "Inquilino", new { id = inquilino.Id })" class="btn btn-info btn-sm mx-1 shadow-sm">Ver</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        } else {
            <div class="alert alert-info" role="alert">
                No existen inquilinos registrados.
            </div>
        }
    </div>
</div>
