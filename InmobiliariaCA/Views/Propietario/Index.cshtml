@model IEnumerable<InmobiliariaCA.Models.Propietario>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Lista de Propietarios";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="fas fa-users"></i> Lista de Propietarios</h2>
        <a href="@Url.Action("AltaEditar", "Propietario")" class="btn btn-success shadow-sm">
            <i class="fas fa-plus"></i> Agregar Nuevo Propietario
        </a>
    </div>
    <div class="row">
        @if (Model.Any()) {
            @foreach (var propietario in Model) {
                <div class="col-12 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title text-white p-2" style="background-color: #2d94f5;">
                                <i class="fas fa-user-tie"></i> @propietario.Nombre @propietario.Apellido
                            </h5>
                            <p class="card-text"><strong><i class="fas fa-id-card"></i> DNI:</strong> @propietario.Dni</p>
                            <p class="card-text"><strong><i class="fas fa-phone"></i> Teléfono:</strong> @propietario.Telefono</p>
                            <p class="card-text"><strong><i class="fas fa-envelope"></i> Email:</strong> @propietario.Email</p>
                            <p class="card-text"><strong><i class="fas fa-map-marker-alt"></i> Dirección:</strong> @propietario.Direccion</p>
                            <div class="d-flex justify-content-end">
                                <a href="@Url.Action("Detalle", "Propietario", new { id = propietario.Id })" class="btn btn-info btn-sm mx-1 shadow-sm">
                                    <i class="fas fa-eye"></i> Ver
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        } else {
            <div class="alert alert-info" role="alert">
                <i class="fas fa-info-circle"></i> No existen propietarios registrados.
            </div>
        }
    </div>
</div>
