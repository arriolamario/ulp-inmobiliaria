@model IEnumerable<InmobiliariaCA.Models.Miembro>

@{
    ViewData["Title"] = "Presentación del Equipo";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Nuestro Equipo de Trabajo</h1>
    <div class="row justify-content-center">
        @foreach (var miembro in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4 d-flex align-items-stretch">
                <div class="card shadow-sm w-100">
                    <div class="card-body text-center">
                        <img src="@(miembro.FotoUrl ?? "~/images/default-avatar.png")" alt="Foto de @miembro.Nombre" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px;">
                        <h4 class="card-title">@miembro.Nombre</h4>
                        <h6 class="card-subtitle text-muted mb-2">@miembro.Rol</h6>
                        <p class="card-text"><i class="fas fa-envelope"></i> @miembro.Email</p>
                        <p class="card-text"><i class="fas fa-phone"></i> @miembro.Telefono</p>
                        <div class="mt-3">
                            <a href="@miembro.LinkedInUrl" target="_blank" class="btn btn-outline-primary btn-sm mx-1">
                                <i class="fab fa-linkedin"></i> LinkedIn
                            </a>
                            <a href="mailto:@miembro.Email" class="btn btn-outline-success btn-sm mx-1">
                                <i class="fas fa-envelope"></i> Contactar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
