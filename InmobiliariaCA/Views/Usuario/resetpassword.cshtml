@model InmobiliariaCA.Models.UsuarioResetPasswordViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center"><i class="fas fa-lock"></i> Reset Password</h3>
                </div>
                <div class="card-body">
                    <form asp-action="ResetPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label"><i class="fas fa-envelope"></i> Email</label>
                            <input asp-for="Email" type="text" class="form-control"
                                placeholder="Email" disabled />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="Email" />
                        <div class="form-group mb-3">
                            <label asp-for="NewPassword" class="form-label"><i class="fas fa-key"></i> Nueva clave</label>
                            <input asp-for="NewPassword" type="password" class="form-control"
                                placeholder="Nueva clave" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"><i class="fas fa-key"></i> Confirmar nueva clave</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control"
                                placeholder="Confirmar nueva clave" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Cambiar Password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
}
