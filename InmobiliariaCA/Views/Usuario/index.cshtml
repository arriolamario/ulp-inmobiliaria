@model IEnumerable<InmobiliariaCA.Models.Usuario>

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="fas fa-users"></i> Lista de Usuarios</h2>
        <a href="@Url.Action("AltaEditar", "Usuario")" class="btn btn-success shadow-sm">Agregar Nuevo Usuario</a>
    </div>
    <div class="row">
        @if (Model.Any()) {
            @foreach (var usuario in Model) {
                <div class="col-12 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title text-white p-2" style="background-color: #2d94f5;">@usuario.NombreCompleto</h5>
                            <p class="card-text"><strong>Email:</strong> @usuario.Email</p>
                            <div class="d-flex justify-content-end">
                                <a href="@Url.Action("Detalle", "Usuario", new { id = usuario.Id })" class="btn btn-info btn-sm mx-1 shadow-sm">Ver</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        } else {
            <div class="alert alert-info" role="alert">
                No existen usuarios registrados.
            </div>
        }
    </div>
</div>
